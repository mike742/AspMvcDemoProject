                @Html.DisplayFor(modelItem => item.V_contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.V_AreaCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.V_phone)
            </td>
