@model Product

    <h2>Create Product</h2>

    <form asp-action="Create">

        @*<div asp-validation-summary="All" class="text-danger"></div>*@

        <div class="form-group">
            <label asp-for="P_Code"></label>
            <input asp-for="P_Code" />
        </div>
        <div class="form-group">
            <label asp-for="P_descript"></label>
            <input asp-for="P_descript" />
            <span asp-validation-for="P_descript" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="P_InDate"></label>
            <input asp-for="P_InDate" />
            <span asp-validation-for="P_InDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="P_QOH"></label>
            <input asp-for="P_QOH" />
            <span asp-validation-for="P_QOH" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="P_Min"></label>
            <input asp-for="P_Min" />
            <span asp-validation-for="P_Min" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="P_Price"></label>
            <input asp-for="P_Price" />
            <span asp-validation-for="P_Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="P_Discount"></label>
            <input asp-for="P_Discount" />
            <span asp-validation-for="P_Discount" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Vendor</label>
            <select asp-for="V_code" asp-items="ViewBag.Vendors"></select>
        </div>

        <button type="submit">Create</button>
    </form>

@section Scripts {
    @{ <partial name="_ValidationScriptsPartial" /> }
}